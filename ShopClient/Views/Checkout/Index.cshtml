@model Order

@{
    int checkout_product = 0;
    @if (ViewBag.cart != null)
    {
        foreach (var item in ViewBag.cart)
        {
            checkout_product += item.Quantity;
        }
    }
}

<div class="dashboard-ecommerce cart-dody">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb border-0">
                                <li class="breadcrumb-item">
                                    <a asp-action="Index" asp-controller="Home" class="breadcrumb-link">Home</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Checkout
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="mb-0">Billing address</h4>
                            </div>
                            <div class="card-body">
                                <form asp-action="Checkout" method="post" class="needs-validation" novalidate="">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="firstName">First name</label>
                                            <input asp-for="FirstName" type="text" class="form-control" id="firstName" placeholder="" value="" required="">
                                            <div class="invalid-feedback">
                                                Valid first name is required.
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label for="lastName">Last name</label>
                                            <input asp-for="LastName" type="text" class="form-control" id="lastName" placeholder="" value="" required="">
                                            <div class="invalid-feedback">
                                                Valid last name is required.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="email">Email</label>
                                        <input asp-for="Email" type="email" class="form-control" id="email" placeholder="you@example.com" required="">
                                        <div class="invalid-feedback">
                                            Please enter a valid email address for shipping updates.
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="phonenumber">Mobile Number</label>
                                        <input asp-for="PhoneNumber" type="text" class="form-control" id="phonenumber" placeholder="0712345678" required="">
                                        <div class="invalid-feedback">
                                            Please enter a valid mobile number for shipping updates.
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="address">Address</label>
                                        <input asp-for="Address1" type="text" class="form-control" id="address" placeholder="1234 Main St" required="">
                                        <div class="invalid-feedback">
                                            Please enter your shipping address.
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="Address2" for="address2">Address 2 <span class="text-muted">(Optional)</span></label>
                                        <input type="text" class="form-control" id="address2" placeholder="Apartment or suite">
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 mb-3">
                                            <label for="country">Country</label>
                                            <select asp-for="Country" class="custom-select d-block w-100" id="country" required="">
                                                <option disabled selected> Select Country</option>
                                            </select>
                                            <div class="invalid-feedback">
                                                Please select a valid country.
                                            </div>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <label for="state">State</label>
                                            <select asp-for="State" class="custom-select d-block w-100" id="state" required="">
                                                <option disabled selected>Select State</option>
                                            </select>
                                            <div class="invalid-feedback">
                                                Please provide a valid state.
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <label for="zip">Zip</label>
                                            <input asp-for="ZipCode" type="text" class="form-control" id="zip" placeholder="" required="">
                                            <div class="invalid-feedback">
                                                Zip code required.
                                            </div>
                                        </div>
                                    </div>
                                    <hr class="mb-4">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="same-address">
                                        <label class="custom-control-label" for="same-address">Shipping address is the same as my billing address</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="save-info">
                                        <label class="custom-control-label" for="save-info">Save this information for next time</label>
                                    </div>
                                    <hr class="mb-4">
                                    <h4 class="mb-3">Payment</h4>
                                    <div class="d-block my-3">
                                        <div class="col-md-3 mb-3">
                                            <label for="zip">Zip</label>
                                            <input asp-for="Payment" type="text" class="form-control" id="zip" placeholder="" required="">
                                            <div class="invalid-feedback">
                                                Zip code required.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="cc-name">Name on card</label>
                                            <input type="text" class="form-control" id="cc-name" placeholder="" required="">
                                            <small class="text-muted">Full name as displayed on card</small>
                                            <div class="invalid-feedback">
                                                Name on card is required
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label for="cc-number">Credit card number</label>
                                            <input type="text" class="form-control" id="cc-number" placeholder="" required="">
                                            <div class="invalid-feedback">
                                                Credit card number is required
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3 mb-3">
                                            <label for="cc-expiration">Expiration</label>
                                            <input type="text" class="form-control" id="cc-expiration" placeholder="" required="">
                                            <div class="invalid-feedback">
                                                Expiration date required
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <label for="cc-cvv">CVV</label>
                                            <input type="text" class="form-control" id="cc-cvv" placeholder="" required="">
                                            <div class="invalid-feedback">
                                                Security code required
                                            </div>
                                        </div>
                                    </div>
                                    <hr class="mb-4">
                                    <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to checkout</button>
                                    <input type="hidden" value="@Model.TotalPrice" asp-for="TotalPrice"/>
                                    @{
                                        double deli = Model.Delivery;
                                        if (deli == 0)
                                        {
                                            <input type="hidden" value="0" asp-for="Delivery" />
                                        }
                                        else
                                        {
                                            <input type="hidden" value="5" asp-for="Delivery" />
                                        }
                                    }
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="d-flex justify-content-between align-items-center mb-0">
                                    <span class="text-muted">Your cart</span>
                                    <span class="badge badge-primary badge-pill">@checkout_product</span>
                                </h4>
                            </div>
                            <div class="card-body">
                                <ul class="list-group mb-3">
                                    @if (ViewBag.cart != null)
                                    {
                                        foreach (var item in ViewBag.cart)
                                        {
                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0">@item.Product.Title</h6>
                                                    <small class="text-muted">@item.Quantity Quantity</small>
                                                </div>
                                                <span class="text-muted">&dollar;@(Convert.ToInt32(item.Product.Price) * item.Quantity)</span>
                                            </li>
                                        }
                                    }
                                    <li class="list-group-item d-flex justify-content-between bg-light">
                                        <div class="text-success">
                                            <h6 class="my-0">Delivery</h6>
                                            <small>
                                                @{
                                                    double devn = Model.Delivery;
                                                    if (devn == 0)
                                                    {
                                                        <span>Free Delivery</span>
                                                    }
                                                    else
                                                    {
                                                        <span>Fast Delivery</span>
                                                    }
                                                }
                                            </small>
                                        </div>
                                        <p class="text-danger">
                                            @{
                                                double dev = Model.Delivery;
                                                if(dev == 0)
                                                {
                                                    <span>Free</span>
                                                }
                                                else
                                                {
                                                    <span>&plus;&dollar;@dev</span>
                                                }
                                            }
                                        </p>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between bg-light">
                                        <div class="text-success">
                                            <h6 class="my-0">Promo code</h6>
                                            <small>EXAMPLECODE</small>
                                        </div>
                                        <span class="text-success">0</span>
                                    </li>                                   
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Total (USD)</span>
                                        <strong>&dollar;@Model.TotalPrice</strong>
                                    </li>
                                </ul>
                                <form>
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="">
                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-primary">Redeem</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
      let auth_token;
      $(document).ready(function () {
        $.ajax({
          headers: {
            accept: "application/json",
            "api-token":
              "Oci_x0F8lCpolVAoEy3Dbb7PqrYVr2C3CxH1mYg1eDKtQZMK98It6QqQSH_WTjvlXXo",
            "user-email": "avishkaprabath712@gmail.com",
          },
          type: "GET",
          url: "https://www.universal-tutorial.com/api/getaccesstoken",
          success: function (data) {
            auth_token = data.auth_token;
            getCountry(data.auth_token);
          },
          error: function (error) {
            console.log(error);
          },
        });
        $("#country").change(function () {
          getState();
        });
      });

      function getCountry() {
        $.ajax({
          type: "GET",
          url: "https://www.universal-tutorial.com/api/countries/",
          success: function (data) {
            data.forEach((element) => {
              $("#country").append(
                '<option value= "' +
                  element.country_name +
                  '">' +
                  element.country_name +
                  "</option>"
              );
            });
          },
          error: function (error) {
            console.log(error);
          },
          headers: {
            Authorization: "Bearer " + auth_token,
            Accept: "application/json",
          },
        });
      }

      function getState() {
        var country_name = $("#country").val();
        $.ajax({
          type: "GET",
          url: "https://www.universal-tutorial.com/api/states/" + country_name,
          success: function (data) {
            data.forEach((element) => {
              $("#state").append(
                '<option value= "' +
                  element.state_name +
                  '">' +
                  element.state_name +
                  "</option>"
              );
            });
          },
          error: function (error) {
            console.log(error);
          },
          headers: {
            Authorization: "Bearer " + auth_token,
            Accept: "application/json",
          },
        });
      }
</script>