@model IEnumerable<ShopAdmin.Models.Product>

@{
    ViewData["Title"] = "Index";
}

    <div class="dashboard-wrapper">
        <div class="container-fluid dashboard-content">
            <!-- ============================================================== -->
            <!-- pageheader -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-xl col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="page-header">
                        <h2 class="pageheader-title">Products</h2>
                        <div class="page-breadcrumb">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">
                                    <a asp-action="Index" class="breadcrumb-link">Products</a>
                                    </li>
                                </ol>
                            </nav>
                        </div>
                    <div class="page-breadcrumb float-right pb-3">
                        <a class="btn btn-primary" asp-controller="Products" asp-action="Create">New Product</a>
                    </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end pageheader -->
            <!-- ============================================================== -->

            <div class="row">
                <!-- ============================================================== -->
                <!-- fixed header  -->
                <!-- ============================================================== -->
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="example4"
                                       class="table table-striped table-bordered"
                                       style="">
                                    <thead>
                                        <tr>
                                            <th>                                               
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.SKU)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Title)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.BrandName)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ReviewScore)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Price)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Stock)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Delivery)
                                            </th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PictureUrl)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.SKU)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Title)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.BrandName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ReviewScore)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Price)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Stock)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Delivery)
                                                </td>
                                                
                                                <td class="gap-5 text-center">

                                                <a asp-action="Edit" asp-route-id="@item.Id"><i class="far fa-edit text-primary mr-2"></i></a>
                                                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye text-primary mr-2"></i></a>
                                                <a asp-action="Delete" asp-route-id="@item.Id"><i class="far fa-trash-alt text-danger"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- end fixed header  -->
                <!-- ============================================================== -->
            </div>
        </div>
    </div>

